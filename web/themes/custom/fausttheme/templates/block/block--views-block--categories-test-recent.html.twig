<div class="recent-posts-block" {{ bem('block') }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes.addClass('h2') }}>{{ label }}</h2>
    <div class="background-overlay-recent">{% trans %}Latest{% endtrans %}</div>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content }}
  {% endblock %}
</div>
