{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <div class="view-pager" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="js-pager__items">
      {% if items.previous %}
      <li class="pager-left-arrow">
        <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}">
          <i class="fas fa-arrow-left"></i>
        </a>
      </li>
        {% else %}
          <li class="pager-left-arrow">
            <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}">
              <i class="fas fa-arrow-left disabled"></i>
            </a>
          </li>
     {% endif %}
      {% if items.next %}
        <li class="pager-right-arrow">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}">
            <i class="fas fa-arrow-right"></i>
          </a>
        </li>
      {% else %}
        <li class="pager-right-arrow">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}">
            <i class="fas fa-arrow-right disabled"></i>
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
{% endif %}
